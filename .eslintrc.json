{
  "env": {
    "browser": true,
    "es2020": true
  },
  "extends": [
    "standard-with-typescript"
],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "ignorePatterns": ["dist", ".eslintrc.cjs", "src/components", "src/hooks"],
  "plugins": ["react", "react-refresh"],
  "rules": {
    "react-refresh/only-export-components": [
      "warn",
      { "allowConstantExport": true }
    ],
    "react/react-in-jsx-scope": "off",
    "react/prop-types": "off"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
